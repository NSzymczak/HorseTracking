<?xml version="1.0" encoding="UTF-8"?>
<Shell xmlns="http://xamarin.com/schemas/2014/forms" 
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:HorseTrackingMobile.Views"
       Title="HorseTrackingMobile"
       x:Class="HorseTrackingMobile.AppShell">

    <Shell.Resources>
        <ResourceDictionary>
            <Style x:Key="BaseStyle" TargetType="Element">
                <Setter Property="Shell.BackgroundColor" Value="{StaticResource MainGreen}" />      <!--Naglowek-->
                <Setter Property="Shell.ForegroundColor" Value="{StaticResource Background}" />     <!--HamburgerColor-->
                <Setter Property="Shell.TitleColor" Value="{StaticResource Background}" />
                <Setter Property="Shell.DisabledColor" Value="{StaticResource Background}"/>
                <Setter Property="Shell.UnselectedColor" Value="{StaticResource Background}" />
                <Setter Property="Shell.TabBarBackgroundColor" Value="{StaticResource MainGreen}" />
                <Setter Property="Shell.TabBarForegroundColor" Value="{StaticResource Background}"/>
                <Setter Property="Shell.TabBarUnselectedColor" Value="{StaticResource Background}"/>
                <Setter Property="Shell.TabBarTitleColor" Value="{StaticResource Background}"/>
            </Style>
        </ResourceDictionary>
    </Shell.Resources>

    <FlyoutItem Title="Aplikacja" Icon="icon_about.png" Style="{StaticResource BaseStyle}">

        <Tab Title="Aktywności"
             Icon="icon_about.png">
            <ShellContent x:Name="activity" 
                          ContentTemplate="{DataTemplate local:ActivityView}"/>
        </Tab>

        <Tab Title="Wizyty"
              Icon="icon_about.png">
            
            <ShellContent x:Name="visits" 
                          Route="AboutPage"
                          ContentTemplate="{DataTemplate local:AboutPage}"/>
        </Tab>
        
        <Tab Title="Żywienie" 
             Icon="icon_about.png">
            
            <ShellContent x:Name="Nutrition" 
                          Route="AboutPage"
                          ContentTemplate="{DataTemplate local:AboutPage}"/>
        </Tab>
        
        <Tab Title="Zawody" 
             Icon="icon_about.png">
            
            <ShellContent x:Name="Competition" 
                          ContentTemplate="{DataTemplate local:AboutPage}"/>
        </Tab>
    
    </FlyoutItem>
    
    <FlyoutItem Title="Browse" Icon="icon_feed.png">
        <ShellContent Route="ItemsPage" ContentTemplate="{DataTemplate local:ItemsPage}" />
    </FlyoutItem>

    <MenuItem Text="Logout" Clicked="Logout">
    </MenuItem>
</Shell>
