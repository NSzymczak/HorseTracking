<Window x:Class="HorseTrackingDesktop.View.AddPlanForHorseView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HorseTrackingDesktop.View"
        xmlns:viewmodel="clr-namespace:HorseTrackingDesktop.ViewModel"
        d:DataContext="{d:DesignInstance Type=viewmodel:AddPlanForHorseViewModel}"
        mc:Ignorable="d"
        x:Name="window"
        WindowStartupLocation="CenterScreen"
    Title="AddPlanForHorseView" Height="200" Width="300">
    <StackPanel>
        <Label Content="Wybierz konie:"
               FontSize="15"
               Margin="10" />
        <ListBox SelectionMode="Multiple"
                 ItemsSource="{Binding Horses}"
                 DisplayMemberPath="Name"
                 SelectionChanged="ListBox_SelectionChanged">
        </ListBox>
        <Button Style="{StaticResource SmallImportantButton}"
                Content="Dodaj"
                Command="{Binding AddPlanForHorseCommand}"
                CommandParameter="{Binding ElementName=window}" />
    </StackPanel>
</Window>